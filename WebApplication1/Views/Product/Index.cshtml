@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}
<div class="container ">
    <div class="row">
        <div class="col ">
            <h1>All Product </h1>
        </div>
        <div class="col-5 ">
            <div class="row">
                <a asp-action="Create" class="btn btn-outline-primary col-5 m-1" role="button"> <i class="bi bi-plus-square"></i> Create New Product</a><br />
            </div>
        </div>
    </div>
</div>

<div class="container ">

    <div id="productTableContainer">
    </div>

    <div class="text-center">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center " id="pagination"></ul>
        </nav>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            loadProductData(1);

            function loadProductData(pageNumber) {
                $.ajax({
                    url: '/Product/GetAll',
                    type: 'GET',
                    data: { pageNumber: pageNumber, pageSize: 5 }, // Adjust page size as needed
                    success: function (data) {
                        $('#productTableContainer').html(data);
                        displayPagination(pageNumber);
                    },
                    error: function () {
                        console.log('Error loading data.');
                    }
                });
            }

            function displayPagination(pageNumber) {
                var pagination = $('#pagination');
                pagination.empty();

                for (var i = 1; i <= @ViewBag.PageCount; i++) {
                    var li = '<li class="page-item' + (i === pageNumber ? ' active' : '') + '">' +
                        '<a class="page-link" href="#" data-page="' + i + '">' + i + '</a>' +
                        '</li>';

                    pagination.append(li);
                }

                pagination.find('a').click(function (e) {
                    e.preventDefault();
                    loadProductData($(this).data('page'));
                });
            }
        });
    </script>
}
