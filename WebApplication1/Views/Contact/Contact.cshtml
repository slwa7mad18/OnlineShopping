@model OnlineShopping.Models.ContactFormModel

<!-- Contact Page Layout -->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="https://png.pngtree.com/png-vector/20190827/ourlarge/pngtree-message-icon-design-vector-png-image_1701884.jpg" alt="Contact Image" style="margin-left: -50px;" />
        </div>
        <div class="col-md-6">
            <h2>Contact Us</h2>
            @using (Html.BeginForm("SubmitContactForm", "Contact", FormMethod.Post))
            {
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                <br />
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
                <br />
                @Html.LabelFor(model => model.Message)
                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", required = "required" })
                <br />
                <input type="submit" value="Submit" class="btn btn-primary" />
            }
        </div>
    </div>
</div>
