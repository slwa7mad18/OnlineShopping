@model IEnumerable<WebApplication1.Models.Product>




<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GraduaitionProjectITI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.minHome.css" />
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GraduaitionProjectITI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
    <script src="~/js/sweetalert2.js"></script>


    <style>
        .onHover:hover {
            background-color: #9e9e9e6e !important;
        }

        .btnWidth {
            width: 10% !important;
        }

        .bgCLR {
            background-color: #eee !important;
        }

        .PbgCLR {
            background-color: #b5b4b4c7 !important;
        }

        b5b4b4c7


        .maxH {
            max-height: 450px;
        }



        .star-rating {
            white-space: nowrap;
            color: #ccc;
        }

            .star-rating [type="radio"] {
                appearance: none;
            }

            .star-rating i {
                font-size: 1.2em;
                transition: 0.3s;
            }

            .star-rating label:is(:hover, :has(~ :hover)) i {
                transform: scale(1.35);
                color: #fffdba !important;
                animation: jump 0.5s calc(0.3s + (var(--i) - 1) * 0.15s) alternate infinite;
            }

            .star-rating label:has(~ :checked) i {
                color: #ffc107 !important;
                text-shadow: 0 0 2px #ffffff, 0 0 10px #ffee58;
            }

        .overflow-wrap-break-word {
            overflow-wrap: break-word;
            word-wrap: break-word;
            word-break: break-word;
        }

    </style>

</head>
<body class="m-0">


    <div class="content p-3">
        @RenderBody()
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>


        function SearchProducts() {

            var search = $('#search').val();

            $.ajax({
                url: `/Home/Search?search=${search}`,
                type: 'GET',
                success: function (data) {
                    console.log(data)
                    $('#products').html(data);

                },
                error: function () {
                    console.log('Error loading data.');
                }
            });
        }

        function CategoryProducts(Id) {

            $.ajax({
                url: `/Home/Categories?catId=${Id}`,
                type: 'GET',
                success: function (data) {

                    console.log(data)
                    $('#products').html(data);
                },
                error: function () {
                    console.log('Error loading data.');
                }
            });
        }

        function BrandProducts(Id) {

            $.ajax({
                url: `/Home/Brands?BrandId=${Id}`,
                type: 'GET',
                success: function (data) {

                    console.log(data)
                    $('#products').html(data);
                },
                error: function () {
                    console.log('Error loading data.');
                }
            });
        }

    </script>


    <script src="~/js/Home.js"> </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
