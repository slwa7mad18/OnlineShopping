       @model OnlineShopping.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!-- HTML structure with Bootstrap classes for layout -->
<div class="container">
    <div class="row">
        <!-- Column for the image -->
      
        <!-- Column for the login form -->
        <div class="col-md-6">
            <h1>Login</h1>
           
            
            <!-- Login form -->
            <form asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
            <!-- Link to register -->
            <div>
                <a asp-action="Register">Create Account</a>
            </div>
        </div>


        <div class="col-md-6">
            <!-- Use a div with background-image CSS property to display the image -->
            <div class="image-container" style="background-image: url('/images/login.png');height:500px;weight:300px">
                <!-- You can add additional styling if needed -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

